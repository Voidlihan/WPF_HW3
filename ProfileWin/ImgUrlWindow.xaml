<Window x:Class="ProfileWin.ImgUrlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfileWin"
        mc:Ignorable="d"
        Title="ImgUrlWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Введите Url картинки:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="164" Grid.Row="1"/>
            <TextBox x:Name="imageUrl" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Grid.Row="1"/>
            <Button Content="Загрузить" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,45,400,0" Click="LoadClick" Grid.Row="1"/>

        </Grid>
    </Grid>
</Window>
